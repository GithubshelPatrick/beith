<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CertificadoDeOleActivity">

    <TextView
            android:text="Certificado de Olê"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/textView150" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#161313" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.011"/>
    <TextView
            android:text="Como Fazer :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView151" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView150" app:layout_constraintVertical_bias="0.05"
            android:textColor="#161313" android:textAlignment="center"/>
    <TextView
            android:text="O certificado de olê lhes é emitido no Aeroporto Ben Gurion ou em um dos escritórios do
        Ministério da Aliá e da Integração próximos à sua residência."
            android:layout_width="395dp"
            android:layout_height="56dp"
            android:id="@+id/textView152" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView151"
            app:layout_constraintVertical_bias="0.003" android:textColor="#161313"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="A quem se dirigir :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView153" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView152"
            app:layout_constraintVertical_bias="0.04" android:textAlignment="center" android:textColor="#161313"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Consultores de aliá do Ministério da Aliá e da Integração"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView154" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView153" app:layout_constraintVertical_bias="0.0"
            android:textColor="#161313" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Site : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView155" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView154" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#161313"
            app:layout_constraintHorizontal_bias="0.448" app:layout_constraintVertical_bias="0.057"
            android:textAlignment="center"/>
    <TextView
            android:text="www.klita.gov.il"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView156" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView155"
            app:layout_constraintVertical_bias="0.012" app:layout_constraintHorizontal_bias="0.023"
            android:textColor="#0000f2" android:textAlignment="center"/>
    <ImageView
            android:layout_width="165dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beithbrasil"
            android:id="@+id/imageView36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="460dp" android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/BtnVoltarDeCertificado"/>
    <Button
            android:text="Voltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnVoltarDeCertificado"
            app:layout_constraintTop_toBottomOf="@+id/imageView36" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>