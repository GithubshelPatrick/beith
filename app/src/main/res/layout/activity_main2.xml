<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <ImageView
            android:layout_width="411dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beithbrasil"
            android:id="@+id/imageView2"
            android:layout_marginBottom="97dp" app:layout_constraintBottom_toTopOf="@+id/TextoDescricaoUm"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="89dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="123dp" app:srcCompat="@drawable/fotodois"
            android:id="@+id/SuaFoto"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BtnEntar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            app:layout_constraintEnd_toStartOf="@+id/TextoDescricaoUm" android:layout_marginEnd="12dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Nomezinho"
            android:hint="Nome"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/TextoDescricaoUm" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/SuaFoto"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/TextoDescricaoUm"
            android:hint="Senha"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" app:layout_constraintStart_toEndOf="@+id/SuaFoto"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="121dp" app:layout_constraintBottom_toTopOf="@+id/checkBox"
    />
    <Button
            android:text="Entrar"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnEntar"
            android:textColor="#0000f2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TextoDescricaoUm" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BtnEsqueciSenha" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text="Lembrae senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/TextoDescricaoUm"
            app:layout_constraintEnd_toStartOf="@+id/BtnEsqueciSenha"
            android:layout_marginBottom="29dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="19dp"
            android:textColorLink="#2BF892"/>
    <Button
            android:text="Esqueci a senha"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:id="@+id/BtnEsqueciSenha"
            android:textColor="#0000f2" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/checkBox" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="Quero me cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnQueroMeCadastrar"
            android:textColor="#0000f2"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.966"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>