<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InscricaoDeFilhosActivity">

    <TextView
            android:text="Inscrição dos filhos no sistema educacional:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView178" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textColor="#161313"
            android:textAlignment="center" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.012"/>
    <TextView
            android:text="Como Fazer :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView179" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView178"
            android:textColor="#161313" app:layout_constraintVertical_bias="0.012"/>
    <TextView
            android:text="A inscrição das crianças de 0-3 nas creches diurnas e pré-escolas públicas
            se realiza no Ministério do Trabalho, Bem-estar Social e Serviços Sociais. A matrícula
            para os jardins de infância na idade pré-obrigatória (3-4 anos) e os jardins obrigatórios
             (5-6), como também para as escolas do ensino fundamental é feita no Departamento de Educação
              da Autoridade Local (Reshut HaMekomit). A matrícula do ensino médio é feita nas próprias
              escolas."
            android:layout_width="394dp"
            android:layout_height="136dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView180" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView179"
            app:layout_constraintHorizontal_bias="0.023" app:layout_constraintVertical_bias="0.005"
            android:textColor="#161313"/>
    <TextView
            android:text="A quem se dirigir : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView181" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView180"
            app:layout_constraintVertical_bias="0.054" android:textAlignment="center" android:textColor="#161313"/>
    <TextView
            android:text="Ministério do Trabalho, Bem-estar Social e Serviços Sociais – Divisão de Creches Diurnas e Pré-escolas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView182" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView181"
            app:layout_constraintHorizontal_bias="0.023" app:layout_constraintVertical_bias="0.023"
            android:textColor="#161313"/>
    <TextView
            android:text="Site : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView183" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView182"
            app:layout_constraintVertical_bias="0.062" android:textColor="#161313" android:textAlignment="center"/>
    <TextView
            android:text="www.molsa.gov.il"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView184" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView183"
            app:layout_constraintVertical_bias="0.034" app:layout_constraintHorizontal_bias="0.023"
            android:textAlignment="center" android:textColor="#0000f2"/>
    <ImageView
            android:layout_width="175dp"
            android:layout_height="128dp" app:srcCompat="@drawable/beithbrasil"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView40" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView184" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BtnVoltarDeIscricao" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView40" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>