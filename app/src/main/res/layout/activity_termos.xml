<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TermosActivity">

    <TextView
            android:text="Termos e politica de privacidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView4" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027" android:textColor="#161313" android:textAlignment="center"
            android:textSize="30sp"/>
    <CheckBox
            android:text="Li e concordo "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            app:layout_constraintStart_toEndOf="@+id/photo1" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/BtnConfirmarCadastro" android:textColorLink="#8FF811"/>
    <Button
            android:text="Confiramar meu cadastro "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnConfirmarCadastro"
            app:layout_constraintStart_toStartOf="@+id/checkBox2"
            app:layout_constraintBottom_toBottomOf="@+id/photo1" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="81dp" app:srcCompat="@drawable/brasilisrael"
            android:id="@+id/photo1" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/checkBox2" android:layout_marginEnd="2dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>