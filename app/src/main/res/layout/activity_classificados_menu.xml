            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/SpinerTipo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TxtClassificados" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="195dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beithbrasil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/SuaFoto"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/SpinerTipo"
            android:layout_marginBottom="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>