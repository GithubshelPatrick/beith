<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HabilitacaoActivity">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="114dp" app:srcCompat="@drawable/carteirademotorista"
            android:id="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.013"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="114dp" app:srcCompat="@drawable/cnh"
            android:id="@+id/imageView10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.964" app:layout_constraintVertical_bias="0.012"/>
    <TextView
            android:text="Como habilitar sua Carteira de Motorista em Israel :"
            android:layout_width="211dp"
            android:layout_height="114dp"
            android:id="@+id/cnh1" app:layout_constraintEnd_toStartOf="@+id/imageView10"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.012" app:layout_constraintHorizontal_bias="0.466"
            android:textAlignment="center" android:textColor="#161313" android:textSize="24sp"/>
    <TextView
            android:text="Olim, Turistas, Residentes Temporários e Ezrachim Olim ( filhos de Israelenses nascidos no exterior )  podem dirigir em Israel usando uma carteira válida de habilitação estrangeira por um ano a partir da chegada e tem um periodo de até três anos para usar o benefício de revalidação da habilitação ( em caso de soldados o tempo de serviço não é contato dentro dos três anos)"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView32" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cnh1"
            app:layout_constraintHorizontal_bias="0.483" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Em caso de entradas e saídas múltiplas (por exemplo, se a pessoa chega inicialmente como turista e muda seu status para Oleh), cada caso será considerado separadamente.   ​  Para transferir a habilitação é necessário: "
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView42" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView32" app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text='1) Obter um "Tofes Yarok" (Formulário 18) e passar por um exame de vista em um dos optometristas listados no website do Ministério do Transporte'
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView56" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView42" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.48"/>
    <TextView
            android:text="Documentos necessários:"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView62" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView56" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="1 - Teudat Zehut ou Teudat        2 - Zakaut  NIS 40 – 50                3 - Óculos ou lentes de contato se necessá"
            android:layout_width="202dp"
            android:layout_height="66dp"
            android:id="@+id/textView67" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView62"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text='2) Preencher e assinar a declaração médica do "Tofes Yarok"'
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView78" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView67"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.005"/>
    <TextView
            android:text='3) Levar o formulário ao médico clínico geral, que completará e assinará a parte médica do "Tofes Yarok"'
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView94" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView78"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.48"/>
    <TextView
            android:text="4) Ir até um dos escritórios do Autoridade de Licenciamento. O formulário será carimbado com a autorização para aulas de direção.  Se houver questões médicas, o processo pode ser adiado enquanto a Autoridade de Licenciamento procura uma opinião médica.      "
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView95" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView94"
            app:layout_constraintVertical_bias="0.042"/>
</androidx.constraintlayout.widget.ConstraintLayout>